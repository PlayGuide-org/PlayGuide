<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/pgdark">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect"
        android:id="@+id/relativeLayout1" 
        android:padding="15dp">

            <androidx.appcompat.widget.AppCompatButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:background="@drawable/backbtn"
            android:id="@+id/btn"/>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:layout_toEndOf="@+id/btn"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            android:id="@+id/textView1"/>

         </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout1">

     <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

      <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/img1"
        android:src="@drawable/ldb"
        android:scaleType="centerCrop"
        android:layout_above="@+id/rel3"
        />

    <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
        android:background="#80000000"
        android:paddingVertical="50dp"
        android:paddingHorizontal="10dp"
        android:id="@+id/rel2">

        <ImageView
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:id="@+id/img1"
        android:src="@drawable/ld"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img1"
            android:layout_centerInParent="true"
            android:layout_marginStart="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/ld"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:id="@+id/textView2"/>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_below="@+id/textView2"
            android:text="@string/ldesc"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:paddingEnd="20dp"
            android:id="@+id/textView3"/>
            </RelativeLayout>

        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rel2"
        android:background="@color/pgsdark"
        android:id="@+id/rel3">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="15dp"
                    android:id="@+id/srcContainer">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/guide"
                        android:text="@string/guide"
                        android:textColor="@color/white"
                        android:layout_alignParentStart="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/src"
                        android:text="@string/gucodm"
                        android:textColor="@color/white"
                        android:layout_toStartOf="@+id/datsrc"
                        android:paddingEnd="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/datsrc"
                        android:textColor="@color/white"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>

         </RelativeLayout>

       </RelativeLayout>

    </ScrollView>

</RelativeLayout>

