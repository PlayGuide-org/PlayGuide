<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/pgdark">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect"
        android:id="@+id/relativeLayout1" 
        android:padding="15dp">
            <androidx.appcompat.widget.AppCompatButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:background="@drawable/backbtn"
            android:id="@+id/btn"
            />
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/about"
            android:textColor="@color/white"
            android:layout_toEndOf="@+id/btn"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            android:id="@+id/textView1"/>
         </RelativeLayout>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scroll1"
    android:layout_below="@id/relativeLayout1"
     android:fillViewport="true">
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect"
        android:id="@+id/relativeLayout2">
            <ImageView
                android:layout_below="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/img1"
                android:src="@drawable/wp"
                android:scaleType="centerCrop"
                android:layout_above="@+id/cont"/>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
        android:background="#80000000"
        android:paddingVertical="50dp"
        android:paddingHorizontal="10dp"
        android:layout_below="@+id/relativeLayout1"
        android:id="@+id/rel2"
        >
        <ImageView
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:id="@+id/img1"
        android:src="@drawable/logo"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img1"
            android:layout_centerInParent="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:id="@+id/textView2"/>
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_below="@+id/textView2"
            android:text="@string/desc"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:paddingEnd="20dp"
            android:id="@+id/textView3"/>
            </RelativeLayout>
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rel2"
        android:background="@color/pgsdark"
        android:id="@+id/cont"
        >

   
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:text="@string/ver"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingHorizontal="30dp"
            android:paddingTop="30dp"
            android:textColor="@color/white"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:text="@string/undef"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingHorizontal="30dp"
            android:paddingTop="30dp"
            android:textColor="@color/white"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:text="@string/cn"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView4"
            android:paddingHorizontal="30dp"
            android:paddingVertical="10dp"
            android:textColor="@color/white"
            android:textSize="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:text="@string/ur"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView5"
            android:paddingHorizontal="30dp"
            android:paddingVertical="10dp"
            android:textColor="@color/white"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:text="@string/rab"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView6"
            android:paddingHorizontal="30dp"
            android:textColor="@color/white"
            android:textSize="15dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/appCompatButton3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginHorizontal="30dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView7"
            android:background="@drawable/rightbtn"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/appCompatButton3"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:gravity="bottom"
            >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/appCompatButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn1"
            android:text="@string/git"
            android:textAllCaps="false" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/appCompatButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="45dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn1"
            android:text="@string/checkrel"
            android:layout_below="@+id/appCompatButton1"     
            android:textAllCaps="false" />
        </RelativeLayout>
    </RelativeLayout>
  </RelativeLayout>
</ScrollView>
</RelativeLayout>
